<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#50ff0000"
    tools:showIn="@layout/controls_tv">

    <ImageView
        android:id="@+id/seekIndicatorImageRewind"
        android:src="@drawable/ic_seek_rewind"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/seekIndicatorLabel"
        android:textAppearance="@style/TextAppearance.SeekIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_gravity="center_vertical"
        android:text="00:00:00 / 00:00:00" />

    <ImageView
        android:id="@+id/seekIndicatorImageForward"
        android:src="@drawable/ic_seek_forward"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:visibility="gone"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" />

</LinearLayout>